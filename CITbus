import sys
from datetime import datetime, timedelta

def main():
    if len(sys.argv) > 1:
        try:
            now = datetime.strptime(sys.argv[1], "%H:%M")
        except ValueError:
            now = datetime.now()
    else:
        now = datetime.now()

    current_time = now.replace(second=0, microsecond=0)
        
    candidates = []

    for line in sys.stdin:
        line = line.strip()
        if not line:
            continue
        
        try:
            bus_time = datetime.strptime(line, "%H:%M")
            bus_time = bus_time.replace(year=now.year, month=now.month, day=now.day)
            candidates.append(bus_time)
        except ValueError:
            continue

    candidates.sort()

    found = False
    for bus in candidates:
        if bus >= current_time:
            diff = bus - current_time
            minutes = int(diff.total_seconds() / 60)
            print(f"{bus.strftime('%H:%M')} (あと {minutes} 分)")
            found = True
            break 

    if not found:
        print("本日の便は終了しました")

if __name__ == '__main__':
    main()
